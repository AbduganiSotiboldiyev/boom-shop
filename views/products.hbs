

{{#if myProducts.length}}
<div class='row row-cols-1 row-cols-sm-2 row-cols-md-3 g-5'>
    {{#each myProducts}}
    <div class='col'>
        <div class='card shadow-lg p-3 mb-5 bg-body rounded '>
            <img src='{{this.image}}' />
            <div class='card-body'>
                <p class='card-text fw-bold'>{{this.title}}</p>
                <p class ="card-text ">{{this.description}}</p>
                <div class=' d-flex justify-content-between align-items-center '>
                    <small class=" fs-5 avatar">{{getUserName user.firstName user.lastName}}</small>
                    <small class='text-muted fs-5'>{{this.price}}.00$</small>
                </div>
            </div>

            <div class='card-footer'>
                <div class='btn-group btn-group-sm' role='group' aria-label='Basic example'>
                    <button type='button' class='btn btn-outline-primary'>
                        <a href="/product/{{_id}}" class="text-decoration-none">
                            Detail
                        </a>
                        </button>
                    {{#if @root.token}}
                    {{#ifequal   user._id @root.userId}}
                    <button type='button' class='btn btn-outline-secondary'>
                        <a href="/product-edit/{{_id}}" class="text-decoration-none">
                            Edit
                        </a>
                    </button>
                    <button type='button' class='btn btn-outline-danger'>Delete</button>
                    {{/ifequal}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<p>No product</p>
{{/if}}